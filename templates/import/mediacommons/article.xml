{% if embeds %}
<sec>
{% for url in embeds %}
<fig>
<media
    {% if "soundcloud.com/player" in url %}
    mimetype="audio"
    {% else %}
    mimetype="video"
    {% endif %}
    position="anchor"
    specific-use="online"
    xlink:href="{{ url }}"
/>
</fig>
<p></p>
{% endfor %}
<p></p>
</sec>
{% endif %}
{% if body %}
<sec>
    <title> Creator's Statement</title>
    <p>{{ body|safe }}</p>
</sec>
{% endif %}
{% if reviews %}
<sec>
    <title>Reviews </title>
{% for review in reviews %}
{% with reviews.reviewers|last as reviewer %}
<sec>
  <title>
    {% if review.title %}
        {{ review.title }}
    {% elif reviewer.name %}
        Review by {{ reviewer.name }}
    {% else %
        Anonymous Review 
    {% endif %}
  </title>
  <sec>{{ review.body|safe }}</sec>
</sec>
{% endwith %}
{% endfor %}
</sec>
{% endif %}

